class Solution
{
    public long findMinDiff (ArrayList<Integer> a, int n, int m)
    {
        Collections.sort(a);
        int min=0,max=m,highest=Integer.MAX_VALUE,count=0;
        for(int i=0;i<=n-m;i++){
            count=a.get(i+m-1)-a.get(i);
            if(count<highest){
                highest=count;
            }
        }
        return highest;
    }
}
